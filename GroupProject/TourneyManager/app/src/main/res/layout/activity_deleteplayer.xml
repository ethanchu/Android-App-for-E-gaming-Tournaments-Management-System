<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <EditText
        android:id="@+id/name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="32dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_alignStart="@+id/username" />

    <EditText
        android:id="@+id/phonenumber"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="32dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_below="@+id/username"
        android:layout_toEndOf="@+id/textView3" />

    <EditText
        android:id="@+id/username"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="32dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_below="@+id/name"
        android:layout_alignStart="@+id/phonenumber" />

    <TextView
        android:text="Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_alignBaseline="@+id/name"
        android:layout_alignBottom="@+id/name"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_alignBaseline="@+id/username"
        android:layout_alignBottom="@+id/username"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Phone number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_alignBaseline="@+id/phonenumber"
        android:layout_alignBottom="@+id/phonenumber"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/deck"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="32dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_below="@+id/phonenumber"
        android:layout_alignStart="@+id/phonenumber" />

    <TextView
        android:text="Deck:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_alignBaseline="@+id/deck"
        android:layout_alignBottom="@+id/deck"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Delete Player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp"
        android:id="@+id/button"
        android:onClick="deleteplayer"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_below="@+id/deck"
        android:layout_centerHorizontal="true"
        android:layout_height="215dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="20dp">

            <TextView
                android:text="Date"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:text="Prizes"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView7"
                android:layout_alignBottom="@+id/textView7"
                android:layout_alignParentEnd="true"
                android:layout_width="70dp" />
        </RelativeLayout>

        <ListView
            android:id="@+id/datelistview"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true">

        </ListView>

    </RelativeLayout>

</RelativeLayout>